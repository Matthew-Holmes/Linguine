<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:local="clr-namespace:Linguine.Tabs.WPF"
                    xmlns:controls="clr-namespace:Linguine.Tabs.WPF.Controls">
    <!-- any template like this must be referenced in App.xaml too! -->
    <DataTemplate x:Key="TestLearningTabTemplate">
        <DataTemplate.Resources>
            <local:HighlightConverter x:Key="HighlightConverter"/>
            <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </DataTemplate.Resources>
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Testing Tab" 
               FontSize="18" 
               FontWeight="Bold" 
               Foreground="DarkSlateBlue" 
               HorizontalAlignment="Center"
               Margin="0,10,0,10"/>

            <TextBlock Text="Word:" 
               FontSize="16" 
               FontWeight="Bold"
               Grid.Row="1"
               Margin="10,5,0,0"/>

            <TextBlock Text="{Binding Prompt}" 
               FontSize="16" 
               Foreground="Black" 
               Grid.Row="1"
               Margin="60,5,10,0"
               TextWrapping="Wrap"
               MaxWidth="400"/>

            <TextBlock Text="Your Answer:" 
               FontSize="16" 
               FontWeight="Bold"
               Grid.Row="2"
               Margin="10,10,0,0"/>

            <TextBox Grid.Row="3"
                 Margin="10,5,10,5"
                 FontSize="16"
                 Padding="5"
                 MaxWidth="400"
                 Text="{Binding UserAnswer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 IsReadOnly="{Binding AnswerSubmitted}">
                <TextBox.InputBindings>
                    <KeyBinding Command="{Binding SubmitAnswerCommand}" Key="Enter" />
                </TextBox.InputBindings>
            </TextBox>

            <Button Content="Submit"
            Grid.Row="4"
            Margin="10,5,10,10"
            Padding="5"
            FontSize="16"
            Command="{Binding SubmitAnswerCommand}"
            IsEnabled="{Binding AllowSubmission}"/>

            <TextBlock Text="Correct Answer:" 
               FontSize="16" 
               FontWeight="Bold"
               Grid.Row="5"
               Margin="10,10,0,0"
               Visibility="{Binding AnswerSubmitted, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <TextBlock Text="{Binding CorrectAnswer}" 
               FontSize="16" 
               FontWeight="SemiBold" 
               Foreground="Green" 
               Grid.Row="5"
               Margin="120,10,10,10"
               TextWrapping="Wrap"
               MaxWidth="400"
               Visibility="{Binding AnswerSubmitted, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </Grid>


    </DataTemplate>
</ResourceDictionary>
