<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                    xmlns:local="clr-namespace:Linguine.Tabs.WPF"
                    xmlns:controls="clr-namespace:Linguine.Tabs.WPF.Controls">
    <!-- any template like this must be referenced in App.xaml too! -->
    <DataTemplate x:Key="TestLearningTabTemplate">
        <DataTemplate.Resources>
            <local:HighlightConverter x:Key="HighlightConverter"/>
            <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </DataTemplate.Resources>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Title}" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="DarkSlateBlue" 
                       HorizontalAlignment="Center"
                       Margin="0,10,0,10"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Word:" 
                           FontSize="16" 
                           FontWeight="Bold"
                           Grid.Column="0"
                           Margin="10,5,0,0"/>

                <TextBlock Text="{Binding Prompt}" 
                           FontSize="16" 
                           Foreground="Black" 
                           Grid.Column="0"
                           Margin="60,5,10,0"
                           TextWrapping="Wrap"/>

                <Grid Grid.Column="1"
                  Margin="10,0,10,10"
                  HorizontalAlignment="Center">         
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <!-- fixed width center -->
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Back Button -->
                    <Button Grid.Column="0"
                            Content="◀"
                            Command="{Binding PreviousContextCommand}"
                            Margin="5,0"
                            Width="30"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Center"/>  

                    <!-- Center Text -->
                    <Border Grid.Column="1"
                            Width="500"
                            Height="50"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            ClipToBounds="True">

                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      VerticalAlignment="Center"
                                      Padding="0"
                                      Margin="0">
                            <TextBlock FontSize="16"
                                       TextWrapping="Wrap"
                                       TextTrimming="CharacterEllipsis"
                                       MaxHeight="75"
                                       TextAlignment="Center">
                                <TextBlock.Inlines>
                                    <Run Text="{Binding CurrentContext.Item1, Mode=OneWay}" />
                                    <Run Text="{Binding CurrentContext.Item2, Mode=OneWay}" Foreground="Red" FontWeight="Bold"/>
                                    <Run Text="{Binding CurrentContext.Item3, Mode=OneWay}" />
                                </TextBlock.Inlines>
                            </TextBlock>
                        </ScrollViewer>
                    </Border>

                    <!-- Forward Button -->
                    <Button Grid.Column="2"
                            Content="▶"
                            Command="{Binding NextContextCommand}"
                            Margin="5,0"
                            Width="30"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Center"/>
                </Grid>
            </Grid>
            
            <TextBlock Text="Your Answer:" 
                       FontSize="16" 
                       FontWeight="Bold"
                       Grid.Row="2"
                       Margin="10,10,0,0"/>

            <!-- Answer TextBox -->
            <TextBox x:Name="AnswerBox"
                     Grid.Row="3"
                     Margin="10,5,10,5"
                     FontSize="16"
                     Padding="5"
                     MaxWidth="400"
                     Text="{Binding UserAnswer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     IsReadOnly="{Binding AnswerSubmitted}">
                <TextBox.InputBindings>
                    <KeyBinding Command="{Binding SubmitAnswerCommand}" Key="Enter"/>
                </TextBox.InputBindings>
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding AnswerSubmitted}" Value="False">
                                <Setter Property="FocusManager.FocusedElement" Value="{Binding ElementName=AnswerBox}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <!-- Correct Answer (Only Visible When Answer Submitted) -->
            <TextBlock Text="Correct Answer:" 
                       FontSize="16" 
                       FontWeight="Bold"
                       Grid.Row="4"
                       Margin="10,10,0,0"
                       Visibility="{Binding AnswerSubmitted, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <TextBlock Text="{Binding CorrectAnswer}" 
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       Foreground="Green" 
                       Grid.Row="4"
                       Margin="120,10,10,10"
                       TextWrapping="Wrap"
                       MaxWidth="400"
                       Visibility="{Binding AnswerSubmitted, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- Tick and Cross Buttons (Appear Only After Submission) -->
            <StackPanel Grid.Row="5"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="10"
                        Visibility="{Binding AnswerSubmitted, Converter={StaticResource BoolToVisibilityConverter}}">

                <!-- Tick Button (Correct Submission) -->
                <Button x:Name="TickButton"
                        Content="✔"
                        FontSize="18"
                        Width="50"
                        Height="40"
                        Margin="5"
                        Command="{Binding SubmissionCorrectCommand}">
                    <Button.InputBindings>
                        <KeyBinding Command="{Binding SubmissionIncorrectCommand}" Key="Back"/>
                    </Button.InputBindings>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding AnswerSubmitted}" Value="True">
                                    <Setter Property="FocusManager.FocusedElement" Value="{Binding ElementName=TickButton}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Cross Button (Incorrect Submission) -->
                <Button x:Name="CrossButton"
                        Content="✖"
                        FontSize="18"
                        Width="50"
                        Height="40"
                        Margin="5"
                        Foreground="Red"
                        Command="{Binding SubmissionIncorrectCommand}">
                    <Button.InputBindings>
                        <KeyBinding Command="{Binding SubmissionIncorrectCommand}" Key="Back"/>
                    </Button.InputBindings>
                </Button>
                
                
            </StackPanel>



        </Grid>

    </DataTemplate>
</ResourceDictionary>
