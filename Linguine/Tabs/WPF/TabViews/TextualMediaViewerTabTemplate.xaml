<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- any template like this must be referenced in App.xaml too! -->
    <DataTemplate x:Key="TextualMediaViewerTabTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- For TextBlock -->
                    <RowDefinition Height="*"/>
                    <!-- For ListBox, takes remaining space -->
                </Grid.RowDefinitions>

                <TextBlock Text="{Binding RawText}" TextWrapping="Wrap"/>
                <ListBox ItemsSource="{Binding DiscoveredUnits}" ScrollViewer.VerticalScrollBarVisibility="Visible" Grid.Row="1"/>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Content="Load" Command="{Binding LoadCommand}" Grid.Row="0"/>
                <Button Content="Decompose" Command="{Binding DecomposeCommand}" Grid.Row="1"/>
            </Grid>
          
        </Grid>
    </DataTemplate>
</ResourceDictionary>