<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- any template like this must be referenced in App.xaml too! -->
    <DataTemplate x:Key="TextualMediaViewerTabTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Home tab view content -->

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Content="Load" Command="{Binding LoadCommand}" Grid.Row="0"/>
                <Button Content="Decompose" Command="{Binding DecomposeCommand}" Grid.Row="1"/>
            </Grid>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding RawText}" TextWrapping="Wrap"/>
                <ListBox ItemsSource="{Binding DiscoveredUnits}"/>
            </StackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>