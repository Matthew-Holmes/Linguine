<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Linguine.Tabs.WPF">
    <!-- any template like this must be referenced in App.xaml too! -->
    <DataTemplate x:Key="TextualMediaViewerTabTemplate">
        <DataTemplate.Resources>
            <local:HighlightConverter x:Key="HighlightConverter"/>
        </DataTemplate.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- For TextBlock -->
                    <RowDefinition Height="*"/>
                    <!-- For ListBox, takes remaining space -->
                </Grid.RowDefinitions>

                <TextBlock Text="{Binding RawText}" TextWrapping="Wrap" Grid.Row="0"/>
                
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox ItemsSource="{Binding DiscoveredUnitsRaw}" ScrollViewer.VerticalScrollBarVisibility="Visible" Grid.Column="0"/>
                    <ListBox ItemsSource="{Binding DiscoveredUnitsRooted}" ScrollViewer.VerticalScrollBarVisibility="Visible" Grid.Column="1"/>

                    <!-- to Store the definitions -->
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" Grid.Column="2">
                        <ItemsControl ItemsSource="{Binding PossibleDefinitionStringsForRooted}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ListBox ItemsSource="{Binding}">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="Black" BorderThickness="1" Margin="5">
                                                        <TextBlock Text="{Binding Item1}" TextWrapping="Wrap" MaxWidth="200" Margin="5" 
                                                                   Background="{Binding Item2, Converter={StaticResource HighlightConverter}}"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </ScrollViewer>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Content="Load" Command="{Binding LoadCommand}" Grid.Row="0"/>
                <Button Content="Decompose" Command="{Binding DecomposeCommand}" Grid.Row="1"/>
            </Grid>
          
        </Grid>
    </DataTemplate>
</ResourceDictionary>