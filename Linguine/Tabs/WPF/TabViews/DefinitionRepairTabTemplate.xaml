<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Linguine.Tabs.WPF"
                    xmlns:controls="clr-namespace:Linguine.Tabs.WPF.Controls">
    <!-- any template like this must be referenced in App.xaml too! -->
    <DataTemplate x:Key="DefinitionRepairTabTemplate">
        <DataTemplate.Resources>
            <local:HighlightConverter x:Key="HighlightConverter"/>
            <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <local:BoolToCollapsedConverter x:Key="BoolToCollapsedConverter"/>
            <local:SelectionToBackgroundConverter x:Key="SelectionToBackgroundConverter"/>
            <local:EditMethodToBackgroundConverter x:Key="EditMethodToBackgroundConverter"/>
        </DataTemplate.Resources>
        <Grid>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">

                    <Border Background="#FFF4F4F4"
                            Padding="4,2"
                            CornerRadius="0"
                            BorderBrush="#DDD"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="15"
                            BorderThickness="0.5">
                        <TextBlock Text="{Binding Word}" FontWeight="Bold" FontSize="20" Margin="5" TextWrapping="Wrap"/>
                    </Border>

                    <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"     x:Name="Key"/>
                        <ColumnDefinition Width="2*"    x:Name="Value"/>
                        <ColumnDefinition Width="0.33*" x:Name="RegenButton"/>
                        <ColumnDefinition Width="0.33*" x:Name="CustomValueButton"/>
                        <ColumnDefinition Width="*"     x:Name="ChangeSaving"/>
                        <ColumnDefinition Width="2*"    x:Name="Pad"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" x:Name="CoreDefinition"/>
                        <RowDefinition Height="auto" x:Name="ParsedDefinition"/>
                        <RowDefinition Height="auto" x:Name="IPA"/>
                        <RowDefinition Height="auto" x:Name="Romanised"/>
                    </Grid.RowDefinitions>

                    <!-- Core Definition -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Definition:" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" 
                       Text="{Binding DefinitionCoreText}" 
                       Background="{Binding CoredDefinitionChanged, Converter={StaticResource EditMethodToBackgroundConverter}}" 
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="5"/>

                    <Button Grid.Row="0" Grid.Column="2" Width="30" Height="30"
                            Content="↺" FontSize="16"
                            Command="{Binding MachineRefreshCoreDefinitionCommand}"
                            IsEnabled="{Binding ButtonsEnabled}"/>

                    <Button Grid.Row="0" Grid.Column="3" Width="30" Height="30"
                            Command="{Binding UserRefreshCoreDefinitionCommand}"
                            IsEnabled="{Binding ButtonsEnabled}">
                        <TextBlock Text="✍️" FontSize="16" Margin="0,-4,0,0"/>
                    </Button>

                    <Button Grid.Row="0" Grid.Column="4" Width="30" Height="30"
                            Command="{Binding SaveCoreDefinitionChangesCommand}"
                            Visibility="{Binding ShowCoreDefinitionSaveChanges, Converter={StaticResource BoolToCollapsedConverter}}">
                        <TextBlock Text="💾" FontSize="16"/>
                    </Button>

                    <!-- Parsed Definition -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Parsed:" VerticalAlignment="Center" Margin="5" Visibility="{Binding ShowParsing, Converter={StaticResource BoolToCollapsedConverter}}"/>
                    <TextBlock Grid.Row="1" Grid.Column="1"
                       Text="{Binding ParsedDefinitionText}"
                       Background="{Binding ParsedDefinitionChanged, Converter={StaticResource EditMethodToBackgroundConverter}}" 
                       Visibility="{Binding ShowParsing, Converter={StaticResource BoolToCollapsedConverter}}"
                       TextWrapping="Wrap"
                       VerticalAlignment="Center"
                       Margin="5"/>

                    <Button Grid.Row="1" Grid.Column="2" Width="30" Height="30"
                            Content="↺" FontSize="16"
                            Command="{Binding MachineRefreshParsedDefinitionCommand}"
                            IsEnabled="{Binding ButtonsEnabled}"
                            Visibility="{Binding ShowParsing, Converter={StaticResource BoolToCollapsedConverter}}"/>

                    <Button Grid.Row="1" Grid.Column="3" Width="30" Height="30"
                            Command="{Binding UserRefreshParsedDefinitionCommand}"
                            IsEnabled="{Binding ButtonsEnabled}"
                            Visibility="{Binding ShowParsing, Converter={StaticResource BoolToCollapsedConverter}}">
                        <TextBlock Text="✍️" FontSize="16" Margin="0,-4,0,0"/>
                    </Button>

                    <Button Grid.Row="1" Grid.Column="4" Width="30" Height="30"
                            Command="{Binding SaveParsedDefinitionChangesCommand}"
                            Visibility="{Binding ShowParsedDefinitionSaveChanges, Converter={StaticResource BoolToCollapsedConverter}}">
                        <TextBlock Text="💾" FontSize="16"/>
                    </Button>

                    <!-- IPA Pronunciation -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="IPA:" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="2" Grid.Column="1"
                       Text="{Binding IpaPronunciation}"
                       Background="{Binding IpaChanged, Converter={StaticResource EditMethodToBackgroundConverter}}" 
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="5"/>

                    <Button Grid.Row="2" Grid.Column="2" Width="30" Height="30"
                            Content="↺" FontSize="16"
                            Command="{Binding MachineRefreshIpaCommand}"
                            IsEnabled="{Binding ButtonsEnabled}"/>

                    <Button Grid.Row="2" Grid.Column="3" Width="30" Height="30"
                            Command="{Binding UserRefreshIpaCommand}"
                            IsEnabled="{Binding ButtonsEnabled}">
                        <TextBlock Text="✍️" FontSize="16" Margin="0,-4,0,0"/>
                    </Button>

                    <Button Grid.Row="2" Grid.Column="4" Width="30" Height="30"
                            Command="{Binding SaveIPAChangesCommand}"
                            Visibility="{Binding ShowIPASaveChanges, Converter={StaticResource BoolToCollapsedConverter}}">
                        <TextBlock Text="💾" FontSize="16"/>
                    </Button>

                    <!-- Romanised Pronunciation -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Romanised:" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Grid.Row="3" Grid.Column="1"
                       Text="{Binding RomanisedPronunciation}"
                       Background="{Binding RomanisedChanged, Converter={StaticResource EditMethodToBackgroundConverter}}" 
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="5"/>

                    <Button Grid.Row="3" Grid.Column="2" Width="30" Height="30"
                            Content="↺" FontSize="16"
                            Command="{Binding MachineRefreshRomanisedCommand}"
                            IsEnabled="{Binding ButtonsEnabled}"/>

                    <Button Grid.Row="3" Grid.Column="3" Width="30" Height="30"
                            Command="{Binding UserRefreshRomanisedCommand}"
                            IsEnabled="{Binding ButtonsEnabled}">
                        <TextBlock Text="✍️" FontSize="16" Margin="0,-4,0,0"/>
                    </Button>

                    <Button Grid.Row="3" Grid.Column="4" Width="30" Height="30"
                            Command="{Binding SaveRomanisedChangesCommand}"
                            Visibility="{Binding ShowRomanisedSaveChanges, Converter={StaticResource BoolToCollapsedConverter}}">
                        <TextBlock Text="💾" FontSize="16"/>
                    </Button>

                </Grid>
            </StackPanel>
            </ScrollViewer>

        </Grid>

    </DataTemplate>
</ResourceDictionary>